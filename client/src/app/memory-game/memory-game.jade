.app
	.visible#visible(ng-click="toggleVisible()")
		.instructions-back
		.fixed-instruction
			.fixed-top-left-home-btn(ng-click="goHome()", ng-src="assets/images/btns/home.png") 
				img(ng-src="assets/images/btns/return-home.png") 
				|  HOME
			.white-copy(ng-if="!idleBool")
				img.instructions-title-image.padtop(ng-src="assets/ICONS/memory.png", width="160px")
				.instructions-title
					b {{game_prompt}}
				.instructions {{instructions}}
				img.go-to-game-btn(ng-src="assets/BUTTONS/start.png")
			.white-copy(ng-show="showCopyIdle()")
				img.instructions-title-image(ng-src="assets/ICONS/clock.png")
				.instructions Are you still there? Touch anywhere to keep playing.
				.subinstructions The screen will go back to home in 10.
	.hilton-background-image(ng-click="resetIdle()")
		.fixed-top-left-home-btn(ng-click="goHome()", ng-src="assets/images/btns/home.png") 
			img(ng-src="assets/images/btns/return-home.png") 
			|  HOME 
		.fixed-top-left-home-btn.top-right(ng-click="toggleVisible()", ng-src="assets/images/btns/home.png") 
			img(ng-src="assets/images/btns/return-home.png") 
			|  RULES
		.cards
			.flip(ng-repeat="card in cards track by $index")
				.card(id="{{$index}}", ng-click="cardFlipped($index)")
					.face.front
						img.card-img(src="assets/CARDS/verso.jpg")
					.face.back
						img.card-img(ng-src="{{cardImages.images[card.id]}}")
		.fixed-score(ng-hide="score === 0")
			| {{score}}/5
		.copy(ng-hide="score === 0")
			| {{copy}}